<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cold Store Views -->
    <record id="view_cold_store_form" model="ir.ui.view">
        <field name="name">warehouse.cold.store.form</field>
        <field name="model">warehouse.cold.store</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="rack_count"/>
                            <field name="column_count"/>
                            <field name="row_count"/>
                        </group>
                        <group>
                            <field name="height"/>
                            <field name="width"/>
                            <field name="length"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Racks">
                            <field name="rack_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="column_count"/>
                                    <field name="row_count"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_cold_store_tree" model="ir.ui.view">
        <field name="name">warehouse.cold.store.tree</field>
        <field name="model">warehouse.cold.store</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="rack_count"/>
                <field name="column_count"/>
                <field name="row_count"/>
            </tree>
        </field>
    </record>

    <!-- Fridge Views -->
    <record id="view_fridge_form" model="ir.ui.view">
        <field name="name">warehouse.fridge.form</field>
        <field name="model">warehouse.fridge</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="height"/>
                            <field name="width"/>
                            <field name="length"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_fridge_tree" model="ir.ui.view">
        <field name="name">warehouse.fridge.tree</field>
        <field name="model">warehouse.fridge</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="height"/>
                <field name="width"/>
                <field name="length"/>
            </tree>
        </field>
    </record>

    <!-- Rack Views -->
    <record id="view_rack_form" model="ir.ui.view">
        <field name="name">warehouse.rack.form</field>
        <field name="model">warehouse.rack</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="cold_store_id"/>
                            <field name="column_count"/>
                            <field name="row_count"/>
                        </group>
                        <group>
                            <field name="height"/>
                            <field name="width"/>
                            <field name="length"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sections">
                            <field name="section_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="column_number"/>
                                    <field name="row_number"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_rack_tree" model="ir.ui.view">
        <field name="name">warehouse.rack.tree</field>
        <field name="model">warehouse.rack</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="cold_store_id"/>
                <field name="column_count"/>
                <field name="row_count"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_cold_store" model="ir.actions.act_window">
        <field name="name">Cold Stores</field>
        <field name="res_model">warehouse.cold.store</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_fridge" model="ir.actions.act_window">
        <field name="name">Fridges</field>
        <field name="res_model">warehouse.fridge</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_rack" model="ir.actions.act_window">
        <field name="name">Racks</field>
        <field name="res_model">warehouse.rack</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>