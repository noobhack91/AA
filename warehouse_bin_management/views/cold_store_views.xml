<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cold_store_tree" model="ir.ui.view">
        <field name="name">warehouse.cold.store.tree</field>
        <field name="model">warehouse.cold.store</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="rack_count"/>
                <field name="temperature"/>
                <field name="humidity"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_cold_store_form" model="ir.ui.view">
        <field name="name">warehouse.cold.store.form</field>
        <field name="model">warehouse.cold.store</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="rack_count"/>
                            <field name="column_count"/>
                            <field name="row_count"/>
                            <field name="temperature"/>
                            <field name="humidity"/>
                        </group>
                        <group>
                            <field name="height"/>
                            <field name="width"/>
                            <field name="length"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Racks">
                            <field name="rack_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cold_store" model="ir.actions.act_window">
        <field name="name">Cold Stores</field>
        <field name="res_model">warehouse.cold.store</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first cold store!
            </p>
        </field>
    </record>
</odoo>