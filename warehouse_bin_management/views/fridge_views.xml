<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fridge_tree" model="ir.ui.view">
        <field name="name">warehouse.fridge.tree</field>
        <field name="model">warehouse.fridge</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="temperature"/>
                <field name="power_rating"/>
                <field name="has_display"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_fridge_form" model="ir.ui.view">
        <field name="name">warehouse.fridge.form</field>
        <field name="model">warehouse.fridge</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="temperature"/>
                            <field name="power_rating"/>
                            <field name="has_display"/>
                            <field name="display_type" invisible="not has_display"/>
                        </group>
                        <group>
                            <field name="height"/>
                            <field name="width"/>
                            <field name="length"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fridge" model="ir.actions.act_window">
        <field name="name">Fridges</field>
        <field name="res_model">warehouse.fridge</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first fridge!
            </p>
        </field>
    </record>
</odoo>