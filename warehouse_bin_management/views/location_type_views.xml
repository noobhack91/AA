<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_location_type_tree" model="ir.ui.view">
        <field name="name">warehouse.location.type.tree</field>
        <field name="model">warehouse.location.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_location_type_form" model="ir.ui.view">
        <field name="name">warehouse.location.type.form</field>
        <field name="model">warehouse.location.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Location Type Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_location_type" model="ir.actions.act_window">
        <field name="name">Location Types</field>
        <field name="res_model">warehouse.location.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first location type!
            </p>
        </field>
    </record>
</odoo>