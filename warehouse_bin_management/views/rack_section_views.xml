<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rack_section_tree" model="ir.ui.view">
        <field name="name">warehouse.rack.section.tree</field>
        <field name="model">warehouse.rack.section</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="rack_id"/>
                <field name="column_number"/>
                <field name="row_number"/>
                <field name="current_weight"/>
                <field name="is_occupied"/>
                <field name="status"/>
                <field name="last_inventory_date"/>
            </tree>
        </field>
    </record>

    <record id="view_rack_section_form" model="ir.ui.view">
        <field name="name">warehouse.rack.section.form</field>
        <field name="model">warehouse.rack.section</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="rack_id"/>
                            <field name="column_number"/>
                            <field name="row_number"/>
                            <field name="current_weight"/>
                        </group>
                        <group>
                            <field name="height"/>
                            <field name="width"/>
                            <field name="length"/>
                            <field name="is_occupied"/>
                            <field name="status"/>
                            <field name="last_inventory_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rack_section" model="ir.actions.act_window">
        <field name="name">Rack Sections</field>
        <field name="res_model">warehouse.rack.section</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Rack sections are automatically created when you create a rack!
            </p>
        </field>
    </record>
</odoo>