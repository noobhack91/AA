<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_storage_location_tree" model="ir.ui.view">
        <field name="name">warehouse.storage.location.tree</field>
        <field name="model">warehouse.storage.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="location_type_id"/>
                <field name="height"/>
                <field name="width"/>
                <field name="length"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_storage_location_form" model="ir.ui.view">
        <field name="name">warehouse.storage.location.form</field>
        <field name="model">warehouse.storage.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="location_type_id" options="{'no_create': True}"/>
                            <field name="height"/>
                            <field name="width"/>
                            <field name="length"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_storage_location" model="ir.actions.act_window">
        <field name="name">Storage Locations</field>
        <field name="res_model">warehouse.storage.location</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first storage location!
            </p>
        </field>
    </record>
</odoo>